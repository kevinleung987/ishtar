{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-airbnb"
  ],
  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "semicolon": [
      true,
      "always"
    ],
    "ordered-imports": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ],
    "no-console": false
  }
}