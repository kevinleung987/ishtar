{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "declaration": false,
    "strict": true,
    "alwaysStrict": true,
    // "sourceMap": true,
    "noImplicitAny": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./build/*",
    "./node_modules/*",
  ]
}